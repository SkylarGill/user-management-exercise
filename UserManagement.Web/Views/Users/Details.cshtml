@model UserManagement.Models.Users.UserDetailsViewModel

<h2>User Details</h2>

<div class="border border-2 p-4 rounded">
    <fieldset disabled>
        
        <div class="form-group mb-3">
            <label class="form-label mb-2" asp-for="Id"></label>
            <input type="text" class="form-control" asp-for="Id">
        </div>
        <div class="form-group mb-3">
            <label class="form-label mb-2" asp-for="Forename"></label>
            <input type="text" class="form-control" asp-for="Forename">
        </div>
        <div class="form-group mb-3">
            <label class="form-label mb-2" asp-for="Surname"></label>
            <input type="text" class="form-control" asp-for="Surname">
        </div>
        <div class="form-group mb-3">
            <label class="form-label mb-2" asp-for="Email"></label>
            <input type="email" class="form-control" asp-for="Email"/>
        </div>
        <div class="form-group mb-3">
            <label class="form-label mb-2" for="dateOfBirth">Date of Birth</label>
            <input type="date" class="form-control" id="dateOfBirth" asp-for="DateOfBirth" disabled/>
        </div>
        <div class="form-group mb-3">
            <div class="h-25 form-check form-switch">
                <input type="checkbox" class="form-check-input" id="isActive" asp-for="IsActive" disabled/>
                <label class="form-check-label" for="isActive">Is Active?</label>
            </div>
        </div>
    </fieldset>
    
    <button class="btn btn-primary">Edit User</button>
</div>